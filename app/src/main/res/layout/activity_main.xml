<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:focusableInTouchMode="true"
        android:minHeight="45dp"
        app:titleTextColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/speech_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_voice_black_24dp" />
            </com.balysv.materialripple.MaterialRippleLayout>


            <EditText
                fontPath="fonts/JosefinSans-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/speech_icon"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="5dp"
                android:text="Motivational"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="MissingPrefix" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spin_gray"
                android:gravity="center"
                android:paddingLeft="-5dp"
                android:paddingRight="-5dp"
                android:text="spin"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/spin"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:text="Motivational" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/spin"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/author_spin"
                android:background="@color/gray"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Gandhi" />
        </RelativeLayout>
    </RelativeLayout>

    <me.kaelaela.verticalviewpager.VerticalViewPager
        android:id="@+id/vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/toolbar" />
</RelativeLayout>
