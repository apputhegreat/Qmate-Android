<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:focusableInTouchMode="true"
        android:minHeight="45dp"
        app:titleTextColor="@android:color/black">

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/search_bar"
                fontPath="fonts/JosefinSans-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="5dp"
                android:text="Search"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="MissingPrefix" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/ad_view_layout"
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spin_gray"
                android:gravity="center"
                android:paddingLeft="-5dp"
                android:paddingRight="-5dp"
                android:text="spin"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tag_spin"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/spin"
            android:orientation="vertical"
            android:background="@color/gray"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp">
            <View
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/current_tag_text"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="All" />
            <View
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/author_spin"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/spin"
            android:orientation="vertical"
            android:background="@color/gray"
            >

            <View
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>

            <View
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="10dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/current_author_text"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:text="All" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ad_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <com.google.android.gms.ads.doubleclick.PublisherAdView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            ads:adSize="BANNER"
            android:id="@+id/ad_view"
            android:visibility="gone"
            ads:adUnitId="@string/banner_home_footer" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/quote_of_day_label"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/contentColor"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Quote of the day"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_below="@+id/toolbar"
        android:textColor="@android:color/white" />

    <me.kaelaela.verticalviewpager.VerticalViewPager
        android:id="@+id/vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/quote_of_day_label" />
</RelativeLayout>
